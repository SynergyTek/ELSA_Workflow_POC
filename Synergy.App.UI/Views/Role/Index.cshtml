@model IQueryable<Microsoft.AspNetCore.Identity.IdentityRole<Guid>>
@{
	ViewData["Title"] = "Roles";
}

<div class="text-center vstack  container gap-4">
	<div class="d-flex w-100 justify-content-between align-items-center">
		<h1>@ViewBag.Title</h1>
		<a asp-action="Create">
			<button class="btn btn-primary">New</button>
		</a>
	</div>
	@if (Model.Any())
	{
		<div class="card w-100">
			<table class="table table-striped table-bordered">
				<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Code</th>
					<th>Actions</th>
				</tr>
				</thead>
				<tbody>
				@foreach (var role in Model)
				{
					<tr>
						<td>@role.Id</td>
						<td>@role.Name</td>
						<td>@role.NormalizedName</td>
						<td>
							<a id="edit" data-id="@role.Id" asp-action="Edit"
							        class="btn btn-sm btn-primary ">Edit</a>
							<a id="delete" data-id="@role.Id" asp-action="Delete" asp-route-id="@role.Id"
							   class="btn btn-sm btn-danger ">Delete</a>
						</td>
					</tr>
				}
				</tbody>
			</table>
		</div>
	}
	else
	{
		<div class="alert alert-info">
			No roles found. Click on the new button to start!
		</div>
	}
</div>