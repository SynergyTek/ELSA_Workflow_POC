@model IQueryable<User>
@{
	ViewData["Title"] = "Users";
}

<div class="text-center container d-flex align-items-center justify-content-center">
	<div class="card w-100">
		<table id="userTable" class="table table-striped table-bordered">
			<thead>
			<tr>
				<th>Id</th>
				<th>Username</th>
				<th>Email</th>
				<th>Actions</th>
			</tr>
			</thead>
			<tbody>
			@foreach (var user in Model)
			{
				<tr>
					<td>@user.Id</td>
					<td>@user.UserName</td>
					<td>@user.Email</td>
					<td>
						<a id="edit" data-id="@user.Id" asp-action="Manage"  asp-route-id="@user.Id"
						   class="btn btn-sm btn-primary ">Edit</a>
						<a id="delete" data-id="@user.Id" asp-action="Delete" asp-route-id="@user.Id"
						   class="btn btn-sm btn-danger ">Delete</a>
					</td>
				</tr>
			}
			</tbody>
		</table>
	</div>
</div>
<script>
document.querySelector("#userTable #edit").addEventListener("click",(e)=>{

})
</script>